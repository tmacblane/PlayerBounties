@model PlayerBounties.Models.Account
		   
@{
    ViewBag.Title = "My Account";
}

<div id="changePassword">
	@Html.Partial("_ChangePassword", new PlayerBounties.Models.ChangePasswordModel(), null)
</div>

<div id="preferenceForm" style="width: 400px; margin: 20px;">
	<text style="font-size: 18px; font-weight: bolder;">Preferences</text>
	@using(Html.BeginForm("_Preferences", "Account"))
	{
		<div id="preferences">
			@Html.Partial("_Preferences", Model, null)
		</div>
		<div class="rowBlank">
			<input type="submit" value="Update" />
		</div>
	}
</div>