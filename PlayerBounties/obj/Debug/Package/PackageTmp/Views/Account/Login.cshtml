@model PlayerBounties.Models.LoginModel

@{
	ViewBag.Title = "Login";
}

@using(Html.BeginForm())
{ 
    @Html.ValidationSummary(false)
	
    <div id="loginForm" class="centeredForm" style="width: 400px;">
		<div class="rowBlank">
			@Html.LabelFor(m => m.Email)
			@Html.ValidationMessageFor(m => m.Email, "*")
		<br />
			@Html.TextBoxFor(m => m.Email)
		</div>

		<div class="rowBlank">
			@Html.LabelFor(m => m.Password)
			@Html.ValidationMessageFor(m => m.Password, "*")
		<br />
			@Html.PasswordFor(m => m.Password)
		</div>
		<div class="rowBlank">
			<input type="submit" value="Login" />
			<input type="button" value="Cancel" onclick="window.location='../Home/Index'"/>
		</div>

		<div class="rowBlank">
			<hr />
			<ul>
				<li>@Html.ActionLink("Forgot Your Password?", "Login", "Account")</li>
				<li>Want to join the hunt?  @Html.ActionLink("Sign Up", "SignUp", "Account")</li>
			</ul>
		</div>
	</div>
}