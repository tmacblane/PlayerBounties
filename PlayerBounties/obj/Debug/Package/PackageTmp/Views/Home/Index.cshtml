<div style="float: left; padding-left: 390px;">
	<input id="btnPlaceBounty" type="button" value="Login" onclick="location='../../Account/Login'" />
	<br />
	<input id="btnPlaceBounty" type="button" value="Sign up for the hunt" onclick="location='../../Account/SignUp'" />
</div>

<div id="statisticsTables" style="padding-top: 110px;">

	<div id="leftTables" style="float: left; width: 350px;">
		<div>
			@Html.Partial("../Statistics/_BountiesSummary", new PlayerBounties.Models.Bounty())
		</div>
		<div>
			@Html.Action("TopMarks", "Statistics")
		</div>
	</div>

	<div id="rightTables" style="position: absolute; width: 450px;">
		<div>
			@Html.Action("TopHunters", "Statistics")
		</div>
		<div>
			@Html.Action("TopClients", "Statistics")
		</div>
	</div>

</div>

@{
	PlayerBounties.Models.PlayerBountyContext db = new PlayerBounties.Models.PlayerBountyContext();
	
	if(db.KillShotImages.Count() != 0)
	{
		<div>
			@Html.Partial("../Home/_KillShotImages", new PlayerBounties.Models.KillShotImage(), null)
		</div>	
	}
}