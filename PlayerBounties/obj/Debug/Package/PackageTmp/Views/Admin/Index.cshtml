@model PlayerBounties.Models.Bounty

@{
    ViewBag.Title = "Admin Tools";
}

<ul>
	<li>@Html.ActionLink("Manage Factions", "Index", "Faction")</li>
	<li>@Html.ActionLink("Manage Races", "Index", "Race")</li>
	<li>@Html.ActionLink("Manage Player Classes", "Index", "PlayerClass")</li>
	<li>@Html.ActionLink("Manage Shards", "Index", "Shard")</li>
	<li>@Html.ActionLink("Manage Achievements", "Index", "Achievement")</li>
    <li>@Html.ActionLink("Manage Player Class / Race Combinations", "Index", "PlayerClassRace")</li>
</ul>

<div id="leftColumn">
		<table cellspacing="0" cellpadding="2" border="0">
			<tr>
				<td class="inputLabelCell">
					Pending Placement:
				</td>
				<td align="left">
					@if(Model.GetPendingPlacementBounties().Count() != 0)
                    {
                        @Html.ActionLink(Model.GetPendingPlacementBounties().Count().ToString(), "PendingPlacement", "Bounty")
					}
					else
					{
						<text>0</text>
					}
				</td>
			</tr>
			<tr>
				<td class="inputLabelCell">
					Pending Completion:
				</td>
				<td align="left">
					@if(Model.GetPendingCompletionBounties().Count() != 0)
					{
                        @Html.ActionLink(Model.GetPendingCompletionBounties().Count().ToString(), "PendingCompletion", "Bounty")
					}
					else
					{
						<text>0</text>
					}
				</td>
			</tr>
		</table>
	</div>	