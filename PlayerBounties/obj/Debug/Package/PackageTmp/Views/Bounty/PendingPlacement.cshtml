@model IEnumerable<PlayerBounties.Models.Bounty>

<table cellspacing="0" cellpadding="5" border="0">
	<tr>
        <th>
            Placed By
        </th>
		<th>
			Placed On
		</th>
		<th>
			Shard
		</th>
		<th>
			Amount
		</th>
		<th>
			Date Placed
		</th>
		<th></th>
		<th></th>
    </tr>

	@foreach(var bounty in Model)
{
    <tr>
        <td>
			@bounty.CharacterName(bounty.PlacedById)
        </td>
		<td>
			@bounty.CharacterName(bounty.PlacedOnId)
        </td>
		<td>
			@bounty.CharacterShard(bounty.PlacedOnId)
        </td>
		<td>
            @Html.DisplayFor(modelItem => bounty.Amount)
        </td>
		<td>
            @Html.DisplayFor(modelItem => bounty.DatePlaced)
        </td>
		<td>
			@Html.ActionLink("Approve", "ApproveBountyPlacement", "Bounty", new { bounty.Id }, null)
		</td>
		<td>
			@Html.ActionLink("Deny", "DenyBountyPlacement", "Bounty", new { bounty.Id }, null)
		</td>
	</tr>
}

</table>

<div class="rowBlank">
	<input type="button" value="<< Back" onclick="window.location='../Admin'" />
</div>