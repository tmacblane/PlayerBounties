@model IEnumerable<PlayerBounties.Models.Character>


@if(Model.Count() > 0)
{
	<div id="topClientsTable" class="statisticsContainer">
		<table class="statisticsTable" cellspacing="0" cellpadding="3" border="0">
			<thead>
				<tr>
					<th colspan="4" style="text-align: left;">Top Clients</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>Character Name</th>
					<th style="text-align: center;">Bounties</th>
					<th style="text-align: right;">Total Spent</th>
				</tr>
		
				@foreach(var item in Model)
				{
					<tr>
						<td class="inputLabelCell classTxt @item.GetClassStyle(item.CharacterClass(item.Id))">
							@Html.ActionLink(item.Name, "Details", "Character", new { id = item.Id }, null)
						</td>
						<td align="center">
							@item.GetBountiesPlacedCount(item.Id)
						</td>
						<td align="right">
							@string.Format("{0:0,0}", item.GetAmountSpent(item.Id))
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
}