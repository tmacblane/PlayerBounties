@model IEnumerable<PlayerBounties.Models.Character>

@if(Model.Count() > 0)
{
	<div id="topMarksTable" class="statisticsContainer">
		<table class="statisticsTable" cellspacing="0" cellpadding="3" border="0">
			<thead>
				<tr>
					<th colspan="3" style="text-align: left;">Top Marks</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>Character Name</th>
					<th style="text-align: center;">Bounties</th>
					<th style="text-align: right;">Total Worth</th>
				</tr>
		
				@foreach(var item in Model)
				{
					<tr>
						<td class="inputLabelCell classTxt @item.GetClassStyle(item.CharacterClass(item.Id))">
							@Html.ActionLink(item.Name, "Details", "Character", new { id = item.Id }, null)
						</td>
						<td align="center">
							@item.GetBountiesPlacedOnCount(item.Id)
						</td>
						<td align="right">
							@item.GetAmountWorth(item.Id)
						</td>
					</tr>
				}

			</tbody>
		</table>
</div>
}