@model IEnumerable<PlayerBounties.Models.Character>

@if(Model.Count() == 0)
{
	@Html.ActionLink("Add a Character", "Create", "Character")
}
else
{
	<div id="characterTable" style="width: 980px; padding-left: 10px;">
		@Html.Partial("_CharacterSlider")
	</div>
	
	@Html.ActionLink("Add Another Character", "Create", "Character")
}